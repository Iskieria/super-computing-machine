<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.siobhan.trafficlistingprototype.TrafficAppMain"
    android:fillViewport="true">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="1">

       <TextView
           android:id="@+id/urlResponse"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="URL response" />

       <TextView
           android:id="@+id/errorText"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="URL response" />

       <RadioButton
           android:layout_width="160dp"
           android:layout_height="wrap_content"
           android:text="Road Works"
           android:id="@+id/rdWrksBttn"
           android:layout_gravity="center_horizontal"
           android:checked="false" />

       <RadioButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Planned Road Works"
           android:id="@+id/plannedRdWrksBttn"
           android:layout_gravity="center_horizontal"
           android:checked="false" />

       <DatePicker
           android:layout_width="329dp"
           android:layout_height="119dp"
           android:id="@+id/datePicker"
           android:layout_gravity="center_horizontal"
           android:calendarViewShown="false"
           android:layout_weight="0.33"
           android:datePickerMode="spinner"
           android:clickable="false" />

       <ViewFlipper
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/viewFlipper"
           android:autoStart="false" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Get Data"
           android:id="@+id/dataBttn"
           android:layout_gravity="center_horizontal"
           android:onClick="roadwrksData"/>

   </LinearLayout>
</ScrollView>
